<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/home_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/backLL"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:layout_centerVertical="true"
                    android:src="@drawable/back_ic"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvDetailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="EMS"
                android:textStyle="bold"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/text_margin_20" />




        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


    <ProgressBar
        android:id="@+id/prgbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/noDataTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/tab_text_color"
        android:textSize="@dimen/text_margin_20"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/no_data_msg"
        >

    </TextView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/timeRL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:id="@+id/timeRangeRV">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/equipmentLL"
        android:layout_marginLeft="@dimen/text_margin_20"
        android:layout_marginRight="@dimen/text_margin_20"
        android:layout_marginTop="@dimen/text_margin_10"
        android:layout_marginBottom="@dimen/text_margin_10"
        android:background="@drawable/btn_shape_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeRL"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/text_margin_15">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_10"
            android:layout_marginRight="@dimen/text_margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/equipmentNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:text="Item"
                android:textColor="@color/tab_text_color"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/text_margin_10"
                android:layout_alignParentRight="true"
                android:text=""
                android:visibility="visible"
                android:textColor="@color/date_text_color"
                android:layout_gravity="right"
                android:textSize="@dimen/text_margin_12"
                />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rootContainer"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/text_margin_10"
            android:layout_marginRight="@dimen/text_margin_10"


            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relay_container"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/text_margin_10"
            android:layout_marginRight="@dimen/text_margin_10"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/timeAgoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/date_text_color"
            android:layout_marginLeft="@dimen/text_margin_10"

            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_margin_12"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_10"
        android:layout_marginTop="@dimen/text_margin_20"
        android:layout_marginRight="@dimen/text_margin_10"
        android:background="@drawable/card_shape_round"
        android:orientation="vertical"
        android:id="@+id/graphLL"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipmentLL">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/paramNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/text_margin_10"
            android:text="Temperature"
            android:textColor="@color/tab_text_color"

            android:textSize="@dimen/text_margin_16"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/ourLineChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/paramNameTV"
            android:layout_marginRight="0dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/ourBarChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_below="@id/paramNameTV"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>