<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="CustomChipChoiceStyle">@style/ChipCustomStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="ErrorText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/login_button_color</item>
        <item name="boxStrokeWidth">0.1dp</item>
        <item name="boxStrokeWidthFocused">0.1dp</item>
        <item name="boxBackgroundColor">@color/editText_login</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="closeIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="chipSpacingHorizontal">42dp</item>
        <item name="chipSpacing">40dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="singleSelection">true</item>
    </style>

<!--
    <style name="Theme.MyApp.MyTheme" parent="Base.Theme.EMS">
        <item name="chipStyle">@style/ChipStyle</item>
    </style>-->


    <style name="ListChip" parent="Widget.MaterialComponents.Chip.Entry" >
        <item name="rippleColor">@null</item>
        <item name="closeIcon">@null</item>
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:checkable">false</item>
        <item name="android:textSize">8sp</item> //This has not effect
        <item name="android:textColor">@color/tab_text_color</item>
    </style>


</resources>